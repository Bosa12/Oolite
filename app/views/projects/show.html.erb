<div class="logo">
  <%= image_tag 'logo.jpg', alt: '', style: "width: 12vw; height: 100%; border-radius: 10px;" %>
</div>
<div class="container">
  <div class="row row-cols-5 row-cols-md-2 g-4">
    <% if @project.images.attached? %>
      <% @project.images.each do |image| %>
        <div class="col">
          <div class="card-proj">
            <%= image_tag url_for(image), alt: @project.name, class: "fotos-project" %>
            <div class="card-body">
              <p><%= @project.description %></p>
              <p><%= @project.project_type.name %></p>
              
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
