<div class="logo">
  <%= image_tag 'logo.jpg', alt: '', class: 'img-fluid rounded ml-2', style: "height: auto;" %>
</div>

<div class="container mt-5">
 <div class="row d-flex justify-content-around" style="margin-left: -5rem">
    <% @projects.each do |project| %>
        <div class="col-12 col-sm-6 col-md-5 col-lg-3">
          <div class="card-proj">
            <div class="card-body">
              <% if project.images.attached? %>
                <div class="card">
                  <%= image_tag url_for("https://res.cloudinary.com/dc6nbm8zp/image/upload/v1720101942/#{project.images.first.blob.filename}"), alt: project.name, style: "width: 100%; height: 360px;" %>
                </div>
              <% end %>
              <p><% project.category %></p>
              <h2><%= link_to project.name, project_path(id: project.id) %></h2>
            </div>
          </div>
        </div>
    <% end %>
  </div>
  <%= link_to 'back', :back, class: 'btn btn-custom' %>
</div>
<div style="height:300px;"></div>
<style>

.btn-custom {
  background-color: #4CAF50; /* Verde */
  color: white;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  border: none;
  border-radius: 4px;
}
</style>
